extends base

block content
  main.h-screen.flex.items-center.justify-center
    div.p-5.w-96.rounded-md.bg-gray-50
      h2.text-xl.font-semibold.mb-4 Create an account
      form
        div.flex.justify-between.mb-2
          label(for='name' class='font-semibold') Nominativo
          input#name(type='text', placeholder='John Doe', required)
        div.flex.justify-between.mb-2
          label(for='email' class='font-semibold') Email
          input#email(type='email', name='email', placeholder='you@example.com', required)
        div.flex.justify-between.mb-2
          label(for='password' class='font-semibold') Password
          input#password(type='password', name='password', placeholder='••••••••', required, minlength='8')
        div.mt-4
          input(type="submit", value="Sign up" class="cursor-pointer border w-full py-2")

      br
      div.text-end
        a(href="/login", rel="noopener noreferrer") login

  script(src="js/signup.js")